---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import insta1 from "../assets/images/insta1.svg";
import beer from "../assets/images/4_beer.png";
---

<MainLayout title="Maltclub">
  <div class="container mx-auto pt-8 sm:w-1/2 md::w-1/2 px-4">
    <ul class="flex justify-between items-center">
      <li class="flex-1 text-center relative z-20">
        <div class="w-6 h-6 rounded-full border-1 border-blue-500 flex items-center justify-center mx-auto bg-blue-500">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5"></path>
          </svg>
        </div>
        <p class="mt-2 text-blue-500 text-xs">Vælg abonnement</p>
      </li>

      <li class="flex-1 text-center relative">
        <div class="w-6 h-6 rounded-full border-1 border-blue-500 flex items-center justify-center mx-auto bg-blue-500 relative z-20">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 stroke-white">
            <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5"></path>
          </svg>
        </div>
        <p class="mt-2 text-blue-500 text-xs">Registrering</p>
        <div class="absolute z-1 w-[195%] h-[1px] bg-blue-500 top-3 left-1/2 transform -translate-x-1/2 z-0"></div>
      </li>

      <li class="flex-1 text-center relative">
        <div class="w-6 h-6 rounded-full border-1 border-blue-500 flex items-center justify-center mx-auto bg-white">3</div>
        <p class="mt-2 text-blue-500 text-xs">Betalingsoplysninger</p>
      </li>
    </ul>
  </div>
  <a href="/registering">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-6 relative left-[10%] cursor-pointer hover:stroke-orange-500">
      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18"></path>
    </svg>
  </a>
  <div class="flex justify-center md:items-start md:pt-20">
    <div class="w-full max-w-sm md:max-w-5xl">
      <div class="flex">
        <div class="flex-1 text-center">
          <h2 class="text-blue-500 invisible sm:visible md:text-large lg:text-large md:px-4">DIN BESTILLING</h2>
        </div>

        <div class="flex-1 text-center">
          <h2 class="text-blue-500 invisible sm:visible md:text-large lg:text-large md:px-4">BETALING</h2>
        </div>
      </div>

      <div class="md:flex md:justify-center md:items-start min-h-screen pt-8">
        <div class="w-full max-w-5xl">
          <div class="md:grid md:grid-cols-2 md:border-t-1 md:border-black">
            <!-- Venstre sektion: Bestilling -->
            <div class="p-6 md:border-r-1 md:border-black">
              <div class="space-y-2 text-sm">
                <p><strong>1X MALTCLUB ABONNEMENT</strong> <span class="float-right">200 DKK</span></p>
                <p class="md:pt-2">Lys boks <span class="float-right">4 special øl</span></p>
                <p class="md:pt-2">Levering (PostNord udlevering) <span class="float-right">Gratis</span></p>
                <p class="font-bold md:pt-2">Total <span class="float-right">200 DKK</span></p>
              </div>

              <div class="flex justify-center items-center w-72 pt-6">
                <Image src={beer} alt="Billede af øl" />
              </div>
            </div>

            <!-- Højre sektion: Formular -->
            <div class="p-6">
              <form action="#" method="POST" class="space-y-4">
                <!-- Email -->
                <input type="email" placeholder="KORTNUMMER" class="w-full border-1 border-blue-500 rounded p-2 text-sm focus:outline-none focus:ring-1 focus:ring-gray-700" />
                <!-- Fornavn -->
                <div class="flex space-x-4 md:pt-4">
                  <input type="text" placeholder="UDLØBSDATO" class="w-1/2 border-1 border-blue-500 rounded p-2 text-sm focus:outline-none focus:ring-1 focus:ring-gray-700" />
                  <input type="text" placeholder="SIKKERHEDSKODE" class="w-1/2 border-1 border-blue-500 rounded-full p-2 text-sm focus:outline-none focus:ring-1 focus:ring-gray-700" />
                </div>
                <div class="md:pt-4">
                  <input type="text" placeholder="NAVN PÅ KORT" class="w-full border-1 border-blue-500 rounded p-2 text-sm focus:outline-none focus:ring-1 focus:ring-gray-700" />
                  <!-- Efternavn -->
                </div>
                <div class="md:pt-4">
                  <input type="text" placeholder="INDLØS RABATKODE" class="w-full border-1 border-blue-500 rounded p-2 text-sm focus:outline-none focus:ring-1 focus:ring-gray-700" />
                </div>
                <!-- Adresse -->

                <div>
                  <input class="rounded-full" type="checkbox" id="tilmeld1" name="tilmeld1" value="nyhedsbrev" />
                  <label class="text-sm" for="tilmeld1"> TILMELD NYHEDSBREV</label><br />
                  <p class="text-xs w-72 md:w-96">Ved at tilmelde dig vores nyhedsbrev accepterer du vores brugerbetingelser og privatlivspolitik. Du kan til enhver tid afmelde dig via linket i vores e-mails.</p>
                </div>
                <!-- Postnummer & By -->

                <!-- Submit knap -->
                <div class="flex items-center pb-6 pt-4">
                  <Button variant="primary" size="large" href="/tak">GODKEND OG BETAL</Button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
